{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"paths": {
			"@src/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@helpers/*": ["src/helpers/*"],
			"@layouts/*": ["src/layouts/*"],
			"@ds/*": ["src/components/global/design-system/*"]
		}
	}
}
